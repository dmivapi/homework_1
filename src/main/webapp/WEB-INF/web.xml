<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Library</display-name>

    <welcome-file-list>
        <welcome-file>/jsp/home.jsp</welcome-file>
    </welcome-file-list>

<!--============================================================
    Controller
=============================================================-->
    <servlet>
        <servlet-name>LibController</servlet-name>
        <servlet-class>com.epam.dmivapi.web.LibController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LibController</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

<!--============================================================
    library system defaults parameters names
=============================================================-->
    <context-param>
        <param-name>default-loan-term-in-days</param-name>
        <param-value>30</param-value>
    </context-param>

<!--============================================================
    log4j location
=============================================================-->
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>

<!--============================================================
    i18n support
=============================================================-->
    <!-- this way we set the resource bundle name -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources</param-value>
    </context-param>

    <!-- this way we set the default locale (optional) -->
    <!-- the (preferable) browser's locale will be used if we don't set the default locale -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>en</param-value>
    </context-param>

    <!-- supported locales -->
    <context-param>
        <param-name>locales</param-name>
        <param-value>ru en</param-value>
    </context-param>



<!--============================================================
    Context listeners
=============================================================-->
    <listener>
        <listener-class>com.epam.dmivapi.web.listener.ContextListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.epam.dmivapi.web.listener.SessionListener</listener-class>
    </listener>

<!--============================================================
    Encoding support filter
=============================================================-->
        <filter>
            <filter-name>EncodingFilter</filter-name>
            <filter-class>com.epam.dmivapi.web.filter.EncodingFilter</filter-class>
            <init-param>
                <param-name>encoding</param-name>
                <param-value>UTF-8</param-value>
            </init-param>
        </filter>
        <filter-mapping>
            <filter-name>EncodingFilter</filter-name>
            <url-pattern>/jsp/*</url-pattern>
            <servlet-name>LibController</servlet-name>
        </filter-mapping>

<!--============================================================
    Protecting from jsp direct access filter
=============================================================
    <filter>
        <filter-name>PageDirectAccessFilter</filter-name>
        <filter-class>com.epam.dmivapi.web.filter.PageDirectAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PageDirectAccessFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
        <servlet-name>LibController</servlet-name>
    </filter-mapping>-->
<!--============================================================
    Security filter.
    1) admin: admin commands
    2) reader: reader commands
    3) librarian: librarian commands
    4) common-access: commands for all roles
    5) guest-access: commands without access control
    Delimiter - space/tab
=============================================================
        <filter>
            <filter-name>CommandAccessFilter</filter-name>
            <filter-class>com.epam.dmivapi.web.filter.CommandAccessFilter</filter-class>
            <init-param>
                <param-name>admin</param-name>
                <param-value>searchUser addBook removeBook updateBook</param-value>
            </init-param>
            <init-param>
                <param-name>reader</param-name>
                <param-value>requestBookLoan listPersonalLoans</param-value>
            </init-param>
            <init-param>
                <param-name>librarian</param-name>
                <param-value>listLoans listUserLoans listReaders approveBookLoan registerBookReturn</param-value>
            </init-param>
            <init-param>
                <param-name>common-access</param-name>
                <param-value>logout noCommand</param-value>
            </init-param>
            <init-param>
                <param-name>guest-access</param-name>
                <param-value>login listBooks</param-value>
            </init-param>
        </filter>
        <filter-mapping>
            <filter-name>CommandAccessFilter</filter-name>
            <servlet-name>LibController</servlet-name>
        </filter-mapping>
    -->

<!--============================================================
    Error page
=============================================================-->
        <error-page>
            <exception-type>java.lang.Throwable</exception-type>
            <location>/jsp/error_page.jsp</location>
        </error-page>

        <error-page>
            <error-code>404</error-code>
            <location>/jsp/error_page.jsp</location>
        </error-page>
    </web-app>